<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <ul id="sortable" class="todoList">
        {% for item in app.todo %}
            <li class="ui-state-default ">
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="heading{{ item.id }}">
                        <div class="row">
                            <div class="col-md-9">
                                <span class="label label-default">{{ item.prio }}</span>
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{ item.id }}"
                                   aria-expanded="false"
                                   aria-controls="collapse{{ item.id }}">
                                    {{ item.headline }}
                                </a>
                            </div>
                            <div class="col-md-3">
                                <span class="badge">{{ item.dueDate }}</span>
                                <a href="{{ item.link.href }}" class="badge">{{ item.link.title }}</a>
                                {% include 'sharing.template.twig' %}
                            </div>
                        </div>

                    </div>
                    <div id="collapse{{ item.id }}" class="panel-collapse collapse" role="tabpanel"
                         aria-labelledby="heading{{ item.id }}">
                        <div class="panel-body">
                            {{ item.description }}
                        </div>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>